<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--        android:onClick="Sum"-->

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam_semibold"
        android:text="ADD 2 NUMBER"
        android:textColor="#3D3D3D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/eNum2"
        android:layout_width="214dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/eNum1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/eNum1"
        app:layout_constraintTop_toBottomOf="@+id/eNum1" />

    <EditText
        android:id="@+id/eNum1"
        android:layout_width="217dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/txt"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:text="ADD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/eNum2"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@+id/eNum2"
        app:layout_constraintTop_toBottomOf="@+id/eNum2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtRes"
        android:layout_width="2dp"
        android:layout_height="70dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/be_vietnam_semibold"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSum"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnSum"
        app:layout_constraintTop_toBottomOf="@+id/btnSum" />

    <Spinner
        android:id="@+id/spTinh"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:entries="@array/PhepTinh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight="8
        0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSum"
        app:layout_constraintVertical_bias="0.784"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>